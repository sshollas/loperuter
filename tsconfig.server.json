{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "dist",
    "noEmit": false,
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": false
  },
  "include": ["server/**/*.ts", "lib/**/*.ts", "types/**/*.ts", "app/api/**/*.ts"],
  "exclude": ["node_modules", "dist", "components", "tests", "public"]
}
